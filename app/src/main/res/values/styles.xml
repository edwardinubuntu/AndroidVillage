<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<item name="actionBarItemBackground">@drawable/selectable_background_androidvillage</item>
		<item name="popupMenuStyle">@style/PopupMenu.Androidvillage</item>
		<item name="dropDownListViewStyle">@style/DropDownListView.Androidvillage</item>
		<item name="actionBarTabStyle">@style/ActionBarTabStyle.Androidvillage</item>
		<item name="actionDropDownStyle">@style/DropDownNav.Androidvillage</item>
		<item name="actionBarStyle">@style/ActionBar.Solid.Androidvillage</item>
		<item name="actionModeBackground">@drawable/cab_background_top_androidvillage</item>
		<item name="actionModeSplitBackground">@drawable/cab_background_bottom_androidvillage</item>
		<item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Androidvillage</item>

		<!-- Light.DarkActionBar specific -->
		<item name="actionBarWidgetTheme">@style/Theme.Androidvillage.Widget</item>

	</style>

	<style name="ActionBar.Solid.Androidvillage" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
		<item name="background">@drawable/ab_solid_androidvillage</item>
		<item name="backgroundStacked">@drawable/ab_stacked_solid_androidvillage</item>
		<item name="backgroundSplit">@drawable/ab_bottom_solid_androidvillage</item>
		<item name="progressBarStyle">@style/ProgressBar.Androidvillage</item>
	</style>

	<style name="ActionBar.Transparent.Androidvillage" parent="@style/Widget.AppCompat.ActionBar">
		<item name="background">@drawable/ab_transparent_androidvillage</item>
		<item name="progressBarStyle">@style/ProgressBar.Androidvillage</item>
	</style>

	<style name="PopupMenu.Androidvillage" parent="@style/Widget.AppCompat.PopupMenu">
		<item name="android:popupBackground">@drawable/menu_dropdown_panel_androidvillage</item>
	</style>

	<style name="DropDownListView.Androidvillage" parent="@style/Widget.AppCompat.ListView.DropDown">
		<item name="android:listSelector">@drawable/selectable_background_androidvillage</item>
	</style>

	<style name="ActionBarTabStyle.Androidvillage" parent="@style/Widget.AppCompat.ActionBar.TabView">
		<item name="android:background">@drawable/tab_indicator_ab_androidvillage</item>
	</style>

	<style name="DropDownNav.Androidvillage" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
		<item name="android:background">@drawable/spinner_background_ab_androidvillage</item>
		<item name="android:popupBackground">@drawable/menu_dropdown_panel_androidvillage</item>
		<item name="android:dropDownSelector">@drawable/selectable_background_androidvillage</item>
	</style>

	<style name="ProgressBar.Androidvillage" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
		<item name="android:progressDrawable">@drawable/progress_horizontal_androidvillage</item>
	</style>

	<style name="ActionButton.CloseMode.Androidvillage" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
		<item name="android:background">@drawable/btn_cab_done_androidvillage</item>
	</style>

	<!-- this style is only referenced in a Light.DarkActionBar based theme -->
	<style name="Theme.Androidvillage.Widget" parent="@style/Theme.AppCompat">
		<item name="popupMenuStyle">@style/PopupMenu.Androidvillage</item>
		<item name="dropDownListViewStyle">@style/DropDownListView.Androidvillage</item>
	</style>

</resources>